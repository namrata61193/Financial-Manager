<table class="table table-striped">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= "$" + expense.amount.to_s %></td>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= link_to 'Show', expense %> <%= link_to 'Edit', edit_expense_path(expense) %> <%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Spent More Money?' , new_expense_path %>
